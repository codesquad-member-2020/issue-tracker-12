//tsconfig.json
{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,

    "paths": {
      "@/*": ["src/*"],
      "@Components/*": ["src/Components/*"],
      "@Custom/*": ["src/Custom/*"],
      "@Icon/*": ["src/Icon/*"],
      "@Page/*": ["src/Page/*"],
      "@Util/*": ["src/Util/*"]
    }
  },
  "exclude": ["node_modules", "dist", "public"]
}
